<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mss.chatbd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatBD">
        <activity
            android:name=".Activites.EditPost"
            android:exported="false" />
        <activity
            android:name=".Activites.Chat"
            android:exported="false" />
        <activity
            android:name=".Activites.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.EditProfile"
            android:exported="false" />
        <activity
            android:name=".Activites.Profile"
            android:exported="false" />
        <activity
            android:name=".Activites.LogIn"
            android:exported="true" />
        <activity
            android:name=".Activites.Register"
            android:exported="true" />
        <activity
            android:name=".Activites.Start"
            android:exported="false" />
        <activity
            android:name=".Activites.MainActivity"
            android:exported="false" />
    </application>

</manifest>